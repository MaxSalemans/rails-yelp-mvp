<h1>All restaurants</h1>

<ul class='list-group w-50'>
<% @restaurants.each do |restaurant| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <div>
    <%= restaurant.name %> <%= link_to "Details", restaurant_path(restaurant)  %>
    </div>
    <span class="badge badge-primary badge-pill"> <%= restaurant.reviews.count.to_s %></span>
  </li>
<% end %>
</ul>

<%= link_to "Create new Restaurant", new_restaurant_path, class: 'btn btn-outline-primary mt-4 ml-5' %>
